<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  x:Class="StandaloneTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:StandaloneTool.UI"
                   xmlns:vm="clr-namespace:StandaloneTool.ViewModels"
        mc:Ignorable="d"

        AllowDrop="True"
                  ui:DropFilesHelper.IsEnabled="True"
                  d:DataContext="{d:DesignInstance Type=vm:WorkspaceViewModel, IsDesignTimeCreatable=True}"
       d:DesignHeight="450" d:DesignWidth="800"
                   
                  Title="{Binding Title}"
                  >

<Grid>

    </Grid>
</mah:MetroWindow>
